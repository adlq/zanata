<arquillian xmlns             ="http://jboss.org/schema/arquillian"
            xmlns:xsi         ="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

	<container qualifier="jbossas-managed-5" default="true">
		<configuration>
			<property name="jbossHome">/opt/jboss-5.1.0.GA</property>
			<property name="javaHome">/usr/lib/jvm/jre-1.6.0-sun.x86_64</property>
			<property name="javaVmArguments">-Xmx512m -XX:MaxPermSize=256m</property>
			<property name="bindAddress">127.0.0.1</property>
            <property name="httpPort">8080</property>
            <property name="profileName">default</property>
		</configuration>
	</container>
	<extension qualifier="seam2">
		<property name="seamVersion">2.2.0.GA</property>
		<property name="autoPackage">false</property>
	</extension>
</arquillian>